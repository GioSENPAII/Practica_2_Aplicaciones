<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso de Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PracticaCRUD"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config"> <!-- ConfiguraciÃ³n de seguridad de red -->

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PracticaCRUD"> <!-- Ocultar ActionBar -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad para operaciones CRUD -->
        <activity
            android:name=".CrudActivity"
            android:exported="true"
            android:label="Operaciones CRUD"
            android:theme="@style/Theme.PracticaCRUD" /> <!-- Ocultar ActionBar -->

        <!-- Actividad para crear/editar registros -->
        <activity
            android:name=".CreateEditActivity"
            android:exported="true"
            android:label="Crear/Editar Registro"
            android:theme="@style/Theme.PracticaCRUD" /> <!-- Ocultar ActionBar -->
    </application>

</manifest>